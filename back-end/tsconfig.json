{
  "compileOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2022",
    "esModuleInterop": true,
    "allowJs": true,
    "strictNullChecks": true,
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["*"]
    }
  },
  "include": ["src", "tests"],
}
